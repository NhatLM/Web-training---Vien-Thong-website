*{margin:0px}
.choDat_sections {
    width:100%;
    padding-top: 40px;
    padding-bottom: 40px;
    box-sizing: border-box;
    float:left;
}
.choDat_sections h1 {
    color:#56b0b0;
    font-size: 24px;
    font-weight: bold;
    width:100%;
    text-align: center;
}
.bottomline {
    height:16px;
    width:100%;
    margin-bottom: 20px;
}

/*section1*/
.choDat_section1 {
    background:ghostwhite;
}
.choDat_section1_item {
    height:420px;
    margin:10px 0px;
    float:left;
    width:100%;
}
.section1_item_title {
    width:100%;
    float:left;
    height:100px;
    text-align: center;
    color:white;
    background:#ee4123;
    font-size: 20px;
    padding-top:15px;
}
.section1_item_title p {font-size: 25px}
.section1_item_feature_outer {
    width:100%;
    float:left;
    height:320px;
    background: white;
    position:relative;
    font-size: 13px;
    padding: 0px 10px;
}
.section1_item_feature_outer:hover button{
    opacity:1;
}
.section1_item_feature_outer ul {
    list-style-type: none;
    padding: 0px;
}
.section1_item_feature_outer ul li {
    padding:5px 0pc;
    border-bottom: 1px solid ghostwhite;
}
.section1_item_feature_outer button {
    cursor:pointer;
    outline: none;
    border:none;
    width:50%;
    margin-left: 20%;
    text-align: center;
    background: #ee4123;
    position:absolute;
    bottom:25px;
    transition: all 0.5s;
    opacity:0;
}
.section1_item_feature_outer button a {
    color:white;
    font-weight: bold;
    text-decoration: none;
}
.section1_item_feature_outer button:hover {opacity:0.9}
@media screen and (max-width:576px)
{
    .choDat_section1_items{
        width:70%;
    }
}

/*section2*/
.choDat_section2 {
    background:white;
}
.choDat_section2_wrapper {
    width:100%;
    float:left;
    margin-top:30px;
    border: 1px dashed #EE4925;
}
.choDat_section2_img {
    width:100%;
    float:left;
    height:100px;
}
.choDat_section2_img img {
    width: 36%;
    height:80%;
    margin-left: 32%;
    margin-top: 10%;
}
.choDat_section2_content {
    width:100%;
    float:left;
    font-size: 14px;
    padding-top: 20px;
    padding-left:10px;
    padding-right: 10px;
    text-align: center;
}
.choDat_section2_content h5 {
    font-size: 18px;
    color:#56b0b0;
}

/*section3*/
.choDat_section3 {
    color: white;
}
.choDat_section3 h1{ color: white}
#choDat_section3_slider {
    height:80px;
}
#choDat_section3_slider .swiper-container {
    height:100%;
}
.choDat_section3 .swiper-slide div {
    width:90%;
    height:100%;
    margin-left:5%;
    background:white ;
}
.choDat_section3 .swiper-slide div img {
    width:100%;
    height:100%;
}
.choDat_section3 .swiper-button-next,.choDat_section3 .swiper-button-prev {
    height:20px;
    top:55px;
}

@media screen and (max-width: 996px)
{
    #choDat_section3_slider {
        height:95px;
    }
    .choDat_section3 .swiper-button-next,.choDat_section3 .swiper-button-prev {
        top:60px;
    }
}